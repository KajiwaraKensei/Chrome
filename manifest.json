{
  "name": "loco",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": [ "storage",  "gcm", "notifications"],
  "background": {
    "scripts": ["background/script.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "32": "images/i-bui.png"
    }
  },
 "icons": {
    "48": "images/i-bui.png"
  },
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*" ],
      "js": ["content/script.js"],
      "css": ["content/styles.css"]
  }],
  "options_page":"option/index.html",
  "manifest_version": 2
}